<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/appealing_card_view"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/appealing_name"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="61dp"
                android:text="Dummy Navn Etternavn"
                android:textStyle="bold"
                android:textColor="@color/text"/>

            <TextView
                android:id="@+id/appealing_role"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/appealing_name"
                android:layout_below="@+id/appealing_name"
                android:text="Dummy Role"
                android:textColor="@color/text"/>

            <TextView
                android:id="@+id/appealing_workplace"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/appealing_role"
                android:layout_below="@+id/appealing_role"
                android:text="Dummy Workplace"
                android:textColor="@color/text"/>

            <ImageButton
                android:id="@+id/appealing_unappeal"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/appealing_role"
                android:src="@drawable/unapplealing"
                android:scaleType="fitCenter"
                android:padding="10dp"
                android:background="@color/white"/>

            <ImageButton
                android:id="@+id/appealing_request"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/contacticon"
                android:scaleType="fitCenter"
                android:padding="10dp"
                android:background="@color/white"
                />

            <ImageView
                android:id="@+id/appealing_picture"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                card_view:srcCompat="@drawable/dummy_img" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>